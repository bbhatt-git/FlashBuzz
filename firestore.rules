rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public access to rooms and players for this buzzer application.
    // Since there is no user authentication, we permit read/write for all users.
    match /rooms/{roomId} {
      allow read, write: if true;
      
      match /players/{playerId} {
        allow read, write: if true;
      }
    }
  }
}